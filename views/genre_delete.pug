extends layout

block content
    h1 #{title}: #{genre.name}
    //- p= author.lifespan

    if books.length

        p #[strong Delete the following book before attempting to delete this Genre.]

        div(style='margin-left:20px;margin-top:20px')

            h4 Books

            ol
            each book in books
                li
                    a(href=book.url) #{book.title}

    else
        p Do you really want to delete this genre?

        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden' name='bookid' required='true', value=genre._id )

            button.btn.btn-primary(type='submit') Delete